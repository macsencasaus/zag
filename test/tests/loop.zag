// TEST: lex, ir, x86_64-linux

fn loop() i32 {
    var x = 0;

    while (x < 1000) {
        ++x;
    }

    return x;
}

fn loop_break() i32 {
    var x = 0;

    while (x < 1000) {
        ++x;
        if (x == 500)
            break;
    }

    return x;
}

fn loop_continue() i64{
    var x: i64 = 0;

    while (x < 1000) {
        ++x;
        if (x > 500)
            continue;
        ++x;
    }

    return x;
}
